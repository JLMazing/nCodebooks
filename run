#!/bin/bash


function usage
{
	echo -e "\n\tUtility to run experiments. \n\tUsage:\n\n\trun [options]\n\n\t-h\tDisplay usage\n\t-r <X>\tRepeat experiment X times\n\t-f <f>\tUse <f> as settingsfile\n\t-s\tSilent running,exept for the final 'score' output\n\t-l\tSurpress log generation\n\t-g\tSurpress graphic output\n\t-d <f>\tDocument results and logs in the new folder <f>, subdirectory of build/logs\n\t-a\tPlay alert sound when done\n\t-m\tAdd a memo to logfile\n"
}




tmp=$(make | grep "100%")

if [ "${tmp#*"Built target"}" == "$tmp" ] ; then
   echo ""
   echo "ERROR found: Execution halted."
   echo ""
else


log=1
noIters=1
silent=0
log=1
document=0
alert=0
graph=1
settings="settings"
memo=0

while [ "$1" != "" ]; do

    case $1 in
        -r | --repeat   )       shift
                                noIters=$1
                                ;;
	-f | --file     )       shift
				settings=$1
				;;
        -s | --silent   )       silent=1
                                ;;
        -h | --help     )       usage
                                exit 1
                                ;;
        -l | --log      )       log=0
                                ;;
        -g | --graph    )       graph=0
                                ;;
        -d | --document )       document=1
                                shift
                                folderName=$1
                                ;;
        -a | --alert    )       alert=1
                                ;;
	-m | --memo     )       memo=1
                                ;;
    esac
    shift
done

if [ $memo == 1 ] ; then
	nano ./build/memo
	wait
fi





	for i in $(seq 1 $noIters) ;do
   		
   		cd build/
   		logName="LOG"$(date +_%m-%d_%H:%M:%S)
		if [ $memo == 1 ] ; then
			echo $logName >> ./logs/$logName
			cat ./memo >> ./logs/$logName
			echo "" >> ./logs/$logName
			rm ./memo
		fi
   		echo "SETTINGS:" >> ./logs/$logName
        	echo "" >> ./logs/$logName
        	cat $settings >> ./logs/$logName
   		echo "" >> ./logs/$logName
        	echo "" >> ./logs/$logName
		if [ $silent == 1 ] ; then
			./CSVM $settings >> ./logs/$logName
			grep "Score:" build/logs/LOG_12-17_22\:24\:41 | grep -o "[0123456789.]*" | grep "[1234567890]" | tail -n1
		else
   			./CSVM $settings |& tee -a ./logs/$logName
   			echo ""
   			echo ""
		fi
	done

 	../genReport &> /dev/null

	if [ $graph == 1 ] ; then
		xdg-open overview.png
	fi

	if [ $document == 1 ] ; then
		mkdir ./logs/$folderName
		cp ./logs/$logName ./logs/$folderName
		cp ./SVM_0.png ./logs/$folderName
		cp ./SVM_1.png ./logs/$folderName
		cp ./SVM_2.png ./logs/$folderName
		cp ./SVM_3.png ./logs/$folderName
		cp ./SVM_4.png ./logs/$folderName
		cp ./SVM_5.png ./logs/$folderName
		cp ./SVM_6.png ./logs/$folderName
		cp ./SVM_7.png ./logs/$folderName
		cp ./SVM_8.png ./logs/$folderName
		cp ./SVM_9.png ./logs/$folderName
		cp ./overview.png ./logs/$folderName
		cp ./statData_SVM-0 ./logs/$folderName
		cp ./statData_SVM-1 ./logs/$folderName
		cp ./statData_SVM-2 ./logs/$folderName
		cp ./statData_SVM-3 ./logs/$folderName
		cp ./statData_SVM-4 ./logs/$folderName
		cp ./statData_SVM-5 ./logs/$folderName
		cp ./statData_SVM-6 ./logs/$folderName
		cp ./statData_SVM-7 ./logs/$folderName
		cp ./statData_SVM-8 ./logs/$folderName
		cp ./statData_SVM-9 ./logs/$folderName
		cp ./settings ./logs/$folderName
		cp ./LAST_USED.bin ./logs/$folderName
	fi
	if [ $alert == 1 ] ; then
		aplay /usr/share/sounds/alsa/Side_Right.wav &> /dev/null
	fi
	if [ $log == 0 ] ; then
		rm ./logs/$logName
	fi
	rm ./SVM_0.png
	rm ./SVM_1.png
	rm ./SVM_2.png
	rm ./SVM_3.png
	rm ./SVM_4.png
	rm ./SVM_5.png
	rm ./SVM_6.png
	rm ./SVM_7.png
	rm ./SVM_8.png
	rm ./SVM_9.png
	rm ./statData_SVM-0
	rm ./statData_SVM-1
	rm ./statData_SVM-2
	rm ./statData_SVM-3
	rm ./statData_SVM-4
	rm ./statData_SVM-5
	rm ./statData_SVM-6
	rm ./statData_SVM-7
	rm ./statData_SVM-8
	rm ./statData_SVM-9

fi
